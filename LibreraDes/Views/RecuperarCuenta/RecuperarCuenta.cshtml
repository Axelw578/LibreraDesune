@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Recuperar Contraseña</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Custom CSS -->
    <link href="~/css/login.css" rel="stylesheet"> <!-- Usa el mismo CSS que el login -->

</head>
<body>

    <div class="container login-container">
        <!-- Cambiamos a "login-container" para mantener consistencia -->
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6">
                <div class="card login-card">
                    <!-- Cambiamos a "login-card" para el mismo diseño -->
                    <div class="card-body">
                        <h3 class="text-center mb-4">Recuperar Contraseña</h3>

                        <!-- Mensaje de éxito (oculto por defecto) -->
                        <div id="recuperarSuccess" class="alert alert-success" style="display:none;"></div>

                        <!-- Mensaje de error (oculto por defecto) -->
                        <div id="recuperarError" class="alert alert-danger" style="display:none;"></div>

                        <!-- Formulario de recuperación -->
                        <form id="recuperarForm">
                            <div class="form-group">
                                <label for="correo">Correo Electrónico</label>
                                <input type="email" id="correo" class="form-control" placeholder="Correo electrónico" required>
                                <div class="invalid-feedback" id="correoError">Por favor, introduce un correo válido.</div>
                            </div>
                            <div class="d-grid gap-2 mt-4">
                                <button type="submit" class="btn btn-primary btn-block">Recuperar Contraseña</button>
                            </div>
                        </form>

                        <!-- Enlace para volver al login -->
                        <div class="text-center mt-4">
                            <a href="/Login/Login">Volver a Iniciar Sesión</a> <!-- Ruta corregida -->
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS and dependencies -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
