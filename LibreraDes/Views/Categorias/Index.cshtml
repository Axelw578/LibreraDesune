@model IEnumerable<LibreraDes.ViewModels.CategoriaViewModel>

<div class="container categorias-container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-primary">Lista de Categorías</h2>
        <button class="btn btn-success" onclick="openCreateModal()">
            <i class="fas fa-plus"></i> Crear Nueva
        </button>
    </div>

    <!-- Tabla de Categorías -->
    <table class="table table-bordered table-striped categorias-table">
        <thead class="table-primary">
            <tr>
                <th>Nombre</th>
                <th>Descripción</th>
                <th class="text-center">Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var categoria in Model)
            {
                <tr>
                    <td>@categoria.Nombre</td>
                    <td>@categoria.Descripcion</td>
                    <td class="text-center">
                        <button onclick="openEditModal('@categoria.Id', '@categoria.Nombre', '@categoria.Descripcion')" class="btn btn-warning btn-sm me-2">
                            <i class="fas fa-edit"></i> Editar
                        </button>
                        <button onclick="confirmDelete('@categoria.Id')" class="btn btn-danger btn-sm">
                            <i class="fas fa-trash-alt"></i> Eliminar
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<!-- Modal para Crear Categoría -->
<div id="createModal" class="modal fade" tabindex="-1" aria-labelledby="createModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-success text-white">
                <h5 class="modal-title" id="createModalLabel">Crear Categoría</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
            </div>
            <div class="modal-body">
                <!-- Alerta de Mensaje -->
                <div class="alert modal-alert alert-danger d-none" role="alert"></div>
                <form id="createForm">
                    <div class="mb-3">
                        <label for="createName" class="form-label">Nombre:</label>
                        <input type="text" class="form-control" id="createName" required>
                    </div>
                    <div class="mb-3">
                        <label for="createDescription" class="form-label">Descripción:</label>
                        <textarea class="form-control" id="createDescription" required></textarea>
                    </div>
                    <button type="button" onclick="createCategoria()" class="btn btn-primary w-100">Guardar</button>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Modal para Editar Categoría -->
<div id="editModal" class="modal fade" tabindex="-1" aria-labelledby="editModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-warning text-white">
                <h5 class="modal-title" id="editModalLabel">Editar Categoría</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
            </div>
            <div class="modal-body">
                <!-- Alerta de Mensaje -->
                <div class="alert modal-alert alert-danger d-none" role="alert"></div>
                <form id="editForm">
                    <input type="hidden" id="editId">
                    <div class="mb-3">
                        <label for="editName" class="form-label">Nombre:</label>
                        <input type="text" class="form-control" id="editName" required>
                    </div>
                    <div class="mb-3">
                        <label for="editDescription" class="form-label">Descripción:</label>
                        <textarea class="form-control" id="editDescription" required></textarea>
                    </div>
                    <button type="button" onclick="updateCategoria()" class="btn btn-primary w-100">Guardar Cambios</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4mmiLFUM4GFVZA7iQ7Zq3lQ76dyIl3lgz5m9OmE/kqFPF3J8mBLeD5Q" crossorigin="anonymous"></script>
    <script src="~/js/Categorias.js"></script>
}
<link rel="stylesheet" href="~/css/Categorias.css" />
